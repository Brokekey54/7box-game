let selectedBox = null;
const prizes = [
  "ğŸ‰ Free Data Bundle!",
  "ğŸ’µ Cashback Reward!",
  "ğŸ Surprise Gift!",
  "ğŸ”¥ Airtime Bonus!",
  "â­ VIP Access!",
  "ğŸ” Free Meal Voucher!",
  "ğŸ¶ Music Pass!"
];

function selectBox(num) {
  selectedBox = num;
  document.getElementById("payment").classList.remove("hidden");
  document.getElementById("result").classList.add("hidden");
}

function confirmPayment() {
  if (!selectedBox) {
    alert("Please select a box first!");
    return;
  }
  const prize = prizes[selectedBox - 1];
  document.getElementById("result").innerText = `You opened Box ${selectedBox} and won: ${prize}`;
  document.getElementById("result").classList.remove("hidden");
  document.getElementById("payment").classList.add("hidden");
}
